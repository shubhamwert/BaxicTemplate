<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:id="@+id/first_ll"
    android:transitionName="@string/animations">

    <androidx.cardview.widget.CardView
        android:elevation="5dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="8dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
        <TextView
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tender ID : "/>
        <TextView
            android:id="@+id/tv_rv_contractor_row_tender_id"

            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"

            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tenderid"/>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : "/>
        <TextView
            android:id="@+id/tv_rv_contractor_row_tender_location"

            android:textAppearance="?android:textAppearanceSmall"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/location"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView            android:textAppearance="?android:textAppearanceMedium"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date : "/>
        <TextView                 android:id="@+id/tv_rv_contractor_row_tender_date_start"

        android:textAppearance="?android:textAppearanceMedium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/start"
        /></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView            android:textAppearance="?android:textAppearanceMedium"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date : "/>
        <TextView                android:id="@+id/tv_rv_contractor_row_tender_date_end"

        android:textAppearance="?android:textAppearanceMedium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/end"/></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rv_contractor_row_tender_status"

        android:hint="@string/status"/>
</LinearLayout>
    <ImageView

        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="@string/halt"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:id="@+id/bt_rv_contractor_tender_halt_request"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>