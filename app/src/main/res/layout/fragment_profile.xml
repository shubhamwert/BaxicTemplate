<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment"
    android:background="@drawable/gradient">

    <!-- TODO: Update blank fragment layout -->



    <RelativeLayout
        android:id="@+id/Profile_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        >

        <ImageView
            android:id="@+id/UserIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_grey_144dp"
            android:layout_centerHorizontal="true"/>

        <!--Name Input-->

        <LinearLayout
            android:id="@+id/NameInput"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/UserIcon"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView

                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="Name"
                android:textColor="#FFF"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_profile_frag_name"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_text_border"
                android:layout_marginLeft="24dp"
                android:text="Vineet Sharma"
                android:padding="8dp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <!--Email Input-->

        <LinearLayout
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/NameInput"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="Email"

                android:textColor="#FFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_profile_frag_email"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_text_border"
                android:layout_marginLeft="24dp"
                android:text="vineets740@gmail.com"
                android:padding="8dp"
                android:textColor="#000000"
                />

        </LinearLayout>


        <!--Contractor Id Input-->

        <LinearLayout
            android:id="@+id/IdInput"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/Email"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="ID"
                android:textColor="#FFF"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_profile_frag_contractor_id"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_text_border"
                android:layout_marginLeft="24dp"
                android:text="Contractor ID"
                android:padding="8dp"
                android:textColor="#000000"
                />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>